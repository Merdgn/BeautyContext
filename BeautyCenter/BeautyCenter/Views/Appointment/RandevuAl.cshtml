@model BeautyCenter.Presentation.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Randevu Al";
}

<div class="appointment-page">
    <h2>Randevu Al</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="RandevuAl" method="post">
        <div class="form-group mb-3">
            <label>Müşteri Adı Soyadı</label>
            <input asp-for="CustomerName" class="form-control" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>İletişim Bilgisi</label>
            <input asp-for="CustomerContact" class="form-control" />
            <span asp-validation-for="CustomerContact" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Hizmet Seçimi</label>
            <select asp-for="ServiceId" class="form-control">
                <option value="">Hizmet Seçiniz</option>
                @if (ViewBag.Services != null)
                {
                    foreach (var service in ViewBag.Services)
                    {
                        <option value="@service.Id">@service.ServiceName</option>
                    }
                }
            </select>
            <span asp-validation-for="ServiceId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Randevu Tarihi ve Saati</label>
            <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Randevu Al</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
