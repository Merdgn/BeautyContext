@{
    ViewData["Title"] = "Yapay Zeka Önerileri";
}

<h2>Yüz Şeklinize Göre Saç Modeli Önerisi</h2>

<form method="post" enctype="multipart/form-data" asp-controller="AI" asp-action="GetSuggestion">
    <div>
        <label for="image">Fotoğraf Yükleyin:</label>
        <input type="file" id="image" name="image" accept="image/*" required />
    </div>
    <div>
        <button type="submit">Önerileri Al</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
