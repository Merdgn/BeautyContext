@model BeautiyCenter.Entity.Concrete.Contact

@{
    ViewData["Title"] = "Contact Us";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Contact Us</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form method="post">
            <div class="form-group">
                <label>Name</label>
                <input asp-for="ContactName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="ContactEmail" class="form-control" />
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input asp-for="ContactPhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label>Message</label>
                <textarea asp-for="Message" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Send Message</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Find Us Here</h3>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345094447!2d144.95373531590442!3d-37.816279742021535!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf577d7b8f2c0b8f!2sMelbourne%20CBD!5e0!3m2!1sen!2sau!4v1592224976517!5m2!1sen!2sau"
                width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </div>
</div>
