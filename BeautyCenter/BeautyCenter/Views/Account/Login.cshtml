@model BeautyCenter.Presentation.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded">
                <div class="card-header bg-success text-white text-center">
                    <h4>Log in to Your Account</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"]</span>
                        </div>
                    }
                    <form method="post" asp-action="Login">
                        <div class="form-group mb-3">
                            <label asp-for="EmailAddress"></label>
                            <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success w-100">Log in</button>
                        </div>
                        <div class="text-center mt-3">
                            <a class="btn btn-secondary" asp-controller="Account" asp-action="Index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
