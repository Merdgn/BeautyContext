@model List<BeautiyCenter.Entity.Concrete.Employee>

<h2>Çalışan Yönetimi</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı Soyadı</th>
            <th>Uzmanlık Alanı</th>
            <th>Müsaitlik Saatleri</th>
            <th>Salon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeFullName</td>
                <td>@employee.EmployeeSpecialty</td>
                <td>@employee.AvailableHours</td>
                <td>@employee.SalonId</td>
                <td>
                    <form asp-action="DeleteEmployee" method="post">
                        <input type="hidden" name="id" value="@employee.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Yeni Çalışan Ekle</h3>
<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label>Adı Soyadı</label>
        <input name="EmployeeFullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Uzmanlık Alanı</label>
        <input name="EmployeeSpecialty" class="form-control" />
    </div>
    <div class="form-group">
        <label>Müsaitlik Saatleri</label>
        <input name="AvailableHours" class="form-control" />
    </div>
    <div class="form-group">
        <label>Salon</label>
        <select name="SalonId" class="form-control">
            <option value="">Salon Seçiniz</option>
            @foreach (var salon in ViewBag.Salons)
            {
                <option value="@salon.Id">@salon.SalonName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Ekle</button>
</form>
