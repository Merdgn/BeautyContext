@model BeautiyCenter.Entity.Concrete.Salon

<h2>Yeni Salon Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Salon Adı</label>
        <input type="text" class="form-control" asp-for="SalonName" required />
    </div>
    <div class="form-group">
        <label>Adres</label>
        <input type="text" class="form-control" asp-for="SalonAddress" required />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input type="text" class="form-control" asp-for="SalonPhoneNumber" required />
    </div>
    <div class="form-group">
        <label>Çalışma Saatleri</label>
        <input type="text" class="form-control" asp-for="WorkingHours" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Kaydet</button>
</form>

<a href="@Url.Action("Index", "Salon")" class="btn btn-secondary mt-2">Geri Dön</a>
